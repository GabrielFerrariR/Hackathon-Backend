{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {"devDependencies": true}
        ],
        "no-unused-vars": [
            "error",
            { "argsIgnorePattern": "^_"}
        ]
    }
}
